#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"


## ---------------------------------------------------
yarn fix-lint ||
(
    echo 'Eslint file fixing failed'
    false 
)
echo "eslint fix success 九九九九九九"


##----------------------------------------------------
yarn check-lint ||
(
    echo 'Eslint check failed'
    false;
)
echo "check eslint styles success 九九九九九九"


##----------------------------------------------------
yarn format ||
(
    echo "Can't format code"
    false;
)
echo "code format success 九九九九九九"


##----------------------------------------------------
yarn check-format ||
(
    echo 'The format is disgusting'
    false;
)
echo "check code format success 九九九九九九"


#If everything passes... try to run build
echo 'Your code looks good ---> trying to build now游녨游녨游녨游녨游녨游녨'
##----------------------------------------------------
yarn build ||
(
    echo 'Your next build failed'
    false;
)
echo "project build successfully 游땙游땙游땙游땙游땙游땙"

